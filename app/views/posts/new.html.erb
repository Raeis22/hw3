<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>
  <p>
    <%= form.label "description"%>
    <%= form.text_field "description" %>
  </p>
  <p>
    <%= form.label "posted_on" %>
    <%= form.date_field "posted on" %>
  </p>
  <p>
    <%= form.label "place_id", "Place" %>
    <%= form.text_field "place_id" %>
  </p>
  <%= form.submit %>
<% end %>