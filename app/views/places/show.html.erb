<h1><%= @place["name"]%></h1>

<ul>
    <% for post in @posts %>
        <li>
            <%= @post["title"]%>
            <%= @post["posted_on"]%>
            <%= @post["description"]%>
        </li>
    <% end %>
</ul>

<p>
    <a href="/posts/new?place_id=<%= @place["id"]%>">
        New Post about <%= @place["name"] %>
    </a>
</p>

